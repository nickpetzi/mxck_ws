<launch>

	<!-- lidar -->
	<include file="$(find rplidar_ros)/launch/rplidar.launch" />

	<!-- scan visualization-->
	<node pkg="lidar_visualization" type="scan_visualization.py" name="scan_visualization" respawn="true" />

	<!-- image view -->
	<node name="image_view" pkg="image_view" type="image_view" respawn="true">
    	<remap from="image" to="/scan_visualization" />
    </node>

</launch>
